<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorInfo"
    tools:context="com.babycount.fpapp.babycount.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_a_language"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/bubblegum"
                android:textSize="30dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnSpanish"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@color/colorWarning"
            android:layout_margin="3dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="@font/bubblegum"
            android:text="EspaÃ±ol" />
        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@color/colorWarning"
            android:layout_margin="3dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/bubblegum"
            android:textSize="20dp"
            android:text="English" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnJapan"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@color/colorWarning"
                android:layout_margin="3dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/bubblegum"
                android:textSize="20dp"
                android:text="Japan" />
            <Button
                android:id="@+id/btnChinies"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@color/colorWarning"
                android:layout_margin="3dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/bubblegum"
                android:textSize="20dp"
                android:text="China" />
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
